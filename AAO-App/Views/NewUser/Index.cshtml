@model AAO_App.Models.Driver
@{
    Layout = "_NewUser";
    ViewData["Title"] = "Create New User";
}

<link rel="stylesheet" href="/css/ModalStyles.css" />

<img id="Icon" src="images/logo.svg" alt="Alex Andersen logo" />

<div id="DotHolder">

</div>

<form id="CreateUserForm" method="POST" asp-controller="NewUser" asp-action="Index">

    <div class="Formula Displayed">
        <label>Fornavn</label>
        <input asp-for="Firstname">
        <label>Efternavn</label>
        <input asp-for="Lastname">
        <label>Telefon nr</label>
        <input asp-for="Phone">
        <label>FødselsDato</label>
        <input asp-for="Birthday">

        <label>Bopæl</label>
        <input asp-for="Address">
        <div class="ButtonContainer">
            <button type="button" id="Next" onclick="NextSlide()" class="ButtonModal">Næste</button>
        </div>
    </div>

    <div class="Formula">
        <label asp-for="Location" class="control-label">Lokation</label>
        <input asp-for="Location" class="form-control" />

        <label asp-for="CityId" class="control-label"></label>
        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityName">.xvc</select>

        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />

        <label asp-for="ProfileImage" class="control-label"></label>
        <input asp-for="ProfileImage" class="form-control" />

        <div class="ButtonContainer" id="SecondContainer">
            <button type="button" id="Prev" onclick="PrevSlide()" class="ButtonModal">Tilbage</button>

            <input type="Submit" value="Anmod om registrering" class="WideButton">
        </div>
    </div>
</form>

<button id="Help" class="ModalTrigger">Help</button>

<div id="Modal">
    <button onclick="closeHelp()" id="Cross">X</button>
    <h3 id="ModalTitle"></h3>
    <p id="ModalContent"></p>
    <button onclick="closeHelp()" id="CloseButton">Ok</button>
</div>

<script src="../../js/CreateUserScript.min.js"></script>
<script src="../../js/Modal.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
